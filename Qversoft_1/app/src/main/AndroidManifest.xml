        </activity>

        <activity
            android:name=".MainActivity"
            android:label="Saral GST"
            android:theme="@style/MyAppTheme">
        </activity>

        <activity android:name=".Invoice" />
        <activity
            android:name=".Inventory"
            android:theme="@style/MyAppTheme"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".CreateInvoice"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".CompanyName"
            android:windowSoftInputMode="stateAlwaysHidden" />
